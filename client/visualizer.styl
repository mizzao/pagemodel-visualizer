@import 'nib'

// apply a natural box layout model to all elements
*, *:before, *:after
    box-sizing border-box

// Except inputs, which would be too small - http://stackoverflow.com/a/15495604/586086
input
    box-sizing content-box

html, body, .full-height
    height: 100%

.layout-label
    cursor: pointer

.layout-container
    position: absolute
    border: 1px solid #000
    margin: 10px
    top: 0
    bottom: 0
    left: 0
    right: 0

.layout-element
    position: absolute
    border: 1px solid #000
    margin: -1px
